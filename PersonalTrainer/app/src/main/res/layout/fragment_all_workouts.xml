<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AllWorkoutsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_all_workouts"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/CustomToolbarStyle"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_workouts"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_all_workouts"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        tools:listitem="@layout/workout_short"
        android:layout_above="@+id/btn_add_new_workout"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_new_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="25dp"
        android:padding="5dp"
        android:src="@drawable/ic_add_logo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btn_start_workout"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="2dp"
        app:lottie_rawRes="@raw/ic_start"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_workout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_circular_color_accent_background"
        android:gravity="center"
        android:layout_margin="25dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_edit_logo"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>