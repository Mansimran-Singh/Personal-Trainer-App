<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <FrameLayout
        android:id="@+id/fl_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/auth_header_image_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"
            android:src="@drawable/auth_screens_background" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/auth_logo_width_size"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/ic_yoga"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:alpha="0.50"
        android:layout_below="@+id/fl_header_layout"
        />


    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Welcome Back John!"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="35dp"
        android:textSize="28sp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center"
        android:layout_below="@+id/fl_header_layout"
        />

    <LinearLayout
        android:id="@+id/btn_bmi_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@id/btn_workout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_bmi"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULATOR"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@id/btn_workout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HISTORY"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/btn_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/ic_workout"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WORKOUT"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>





</RelativeLayout>